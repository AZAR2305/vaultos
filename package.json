{
  "name": "vaultos",
  "version": "1.0.0",
  "description": "Real-time prediction market using Yellow Network state channels",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch vaultos/src/server/index.ts",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "tsx watch vaultos/src/server/index.ts",
    "build": "tsc && cd vaultos && npm run build",
    "start": "node dist/index.js",
    "preview": "npm run build && npm start",
    "test": "tsx scripts/test-enhanced-yellow.ts",
    "test:yellow": "tsx scripts/test-yellow.ts",
    "test:market": "tsx scripts/test-market-service.ts",
    "test:sandbox": "tsx scripts/test-sandbox-complete-flow.ts",
    "test:bidirectional": "tsx scripts/test-bidirectional-transfer.ts",
    "test:multiuser": "tsx scripts/test-multi-user-market.ts",
    "test:yes-wins": "tsx scripts/test-market-yes-wins.ts",
    "test:judge-proof": "tsx scripts/test-market-single-wallet-proof.ts",
    "test:no-wins": "tsx scripts/test-market-no-wins.ts",
    "simulate:market": "tsx scripts/test-market-simulation.ts",
    "simulate:no-wins": "tsx scripts/test-market-simulation-no-wins.ts",
    "send:clearnode": "tsx scripts/send-and-check-balance.ts",
    "send:clean": "tsx scripts/send-clearnode-clean.ts",
    "send:explained": "tsx scripts/send-offchain-explained.ts",
    "verify:flow": "tsx scripts/verify-deposit-withdraw-flow.ts",
    "check:balance": "tsx scripts/check-balance.ts",
    "demo": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "demo:markets": "tsx scripts/demo-full-flow.ts",
    "deploy:registry": "npx hardhat run scripts/deploy-registry.ts --network baseSepolia",
    "test:hybrid": "tsx scripts/test-market-with-registry.ts"
  },
  "keywords": [
    "prediction-market",
    "yellow-network",
    "state-channels",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@erc7824/nitrolite": "^0.5.3",
    "@tanstack/react-query": "^5.17.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.10.0",
    "express": "^4.18.2",
    "isomorphic-ws": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "viem": "^2.45.1",
    "wagmi": "^2.5.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "chai": "^4.5.0",
    "hardhat": "^2.28.4",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
